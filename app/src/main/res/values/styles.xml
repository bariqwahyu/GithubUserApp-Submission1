<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="civ" parent="@android:style/TextAppearance.Medium">
        <item name="civ_border_color">@color/s_dark</item>
        <item name="civ_border_width">2dp</item>
    </style>
    <style name="btn" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:backgroundTint">@color/ghgreen</item>
    </style>
    <style name="tvList" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
    </style>
    <style name="tvDetail" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:typeface">sans</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="tvDetail.akun">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">4dp</item>
    </style>
    <style name="tvDetail.akun.bold">
        <item name="android:textStyle">bold</item>
    </style>
</resources>